<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Profile picture of the other user on the left -->

    <!-- Left message (received) -->
    <LinearLayout
        android:id="@+id/leftMessageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@drawable/chat_bubble_received"
        android:padding="12dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="20dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/leftMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, this is a received message"
            android:textColor="#000000"/>
    </LinearLayout>

    <!-- Right message (sent) -->
    <LinearLayout
        android:id="@+id/rightMessageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/chat_bubble_sent"
        android:padding="12dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="160dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/rightMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello! This is a sent message"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</RelativeLayout>
