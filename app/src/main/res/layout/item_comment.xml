<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profileurl"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:contentDescription="User Profile Picture" />

        <TextView
            android:id="@+id/commentAuthorTextView"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="Author Name"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <ImageView
            android:id="@+id/options_menu"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="8dp"
            android:onClick="onOptionsMenuClick"
            android:src="@drawable/dots_vertical" />

    </LinearLayout>
    <!-- Author's name with bold style -->
    
    <!-- Comment content with regular style -->
    <TextView
        android:id="@+id/commentContentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment Content"
        android:paddingTop="4dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

    <!-- Timestamp aligned to the right with small text appearance -->
    <TextView
        android:id="@+id/commentTimestampTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timestamp"
        android:paddingTop="4dp"
        android:gravity="end"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

</LinearLayout>
